<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#5ADD3C"
    tools:context=".NumberGuessingActivity">

    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/numberGuessingTextView"
        android:text="@string/guess_the_number_from_0_to_1000"
        android:textSize="40sp"
        android:textStyle="bold"
        android:paddingStart="20dp"
        android:textColor="@color/black"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="100dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

    <androidx.appcompat.widget.AppCompatEditText
        android:id="@+id/numberGuessingEditText"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberGuessingTextView"
        android:layout_marginTop="20dp"
        android:textSize="20sp"
        android:layout_width="150dp"
        android:inputType="number"
        android:layout_height="50dp"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/terminateButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/numberGuessingEditText"
        android:layout_marginTop="20dp"
        android:text="@string/validate"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textAllCaps="false"
        android:layout_width="150dp"
        android:layout_height="60dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>